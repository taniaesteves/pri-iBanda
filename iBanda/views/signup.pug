  body
    .limiter
      .container-login100
        .wrap-login100
          form.login100-form.validate-form.p-l-55.p-r-55.p-t-30(method="POST" action="/signup")
            .wrap-input100.validate-input.m-b-16(data-validate='Please enter email')
              input.input100(type='text', name='email', placeholder='Email')
              span.focus-input100
            .wrap-input100.validate-input.m-b-16(data-validate='Please enter username')
              input.input100(type='text', name='username', placeholder='Username')
              span.focus-input100
            .wrap-input100.validate-input.m-b-16(data-validate='Please enter your name')
              input.input100(type='text', name='name', placeholder='Name')
              span.focus-input100
            .wrap-input100.validate-input.m-b-16(data-validate='Please enter password')
              input.input100(type='password', name='password', placeholder='Password')
              span.focus-input100
            .wrap-input100.validate-input.m-b-16(data-validate='Please confirm the password')
              input.input100(type='password', name='password2', placeholder='Confirm Password')
              span.focus-input100
            .text-right.p-t-13.p-b-23

            .container-login100-form-btn
              button.login100-form-btn.m-b-16(type="submit" value="signup")
                | Sign Up
            .flex-col-c.p-t-30.p-b-30
              span.txt1.p-b-9
                | Already have an account?
              a.txt3(href='/login')
                | Log in now
