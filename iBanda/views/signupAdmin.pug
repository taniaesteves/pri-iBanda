extends layout
block content
  .w3-container
    .w3-card-4
      header.w3-teal.w3-container
        h3 SIGN UP
      .w3-container        
        form.w3-container(method="POST" action="/admin/signup")
          input.w3-input(type="text" name="email" placeholder="E-Mail", required)
          input.w3-input(type="text" name="password" placeholder="password", required)    
          input.w3-input(type="text" name="username" placeholder="Username", required)
          input.w3-input(type="text" name="name" placeholder="Name", required)          
          input.w3-btn.w3-teal(type="submit" value="signup")
        
        if expressFlash.length > 0
          p <strong>FLASH!</strong> #{ expressFlash }

        if sessionFlash && sessionFlash.message
            div(class=sessionFlash.type)
                p <strong>FLASH!</strong> #{ sessionFlash.message }
        

